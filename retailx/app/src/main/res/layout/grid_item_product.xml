<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <RelativeLayout
        android:id="@+id/id_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="vertical"
           >


            <RelativeLayout
                android:id="@+id/badge_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:background="@drawable/bg_image"
                    android:id="@+id/relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >



                    <ImageView
                        android:id="@+id/image_copy"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:contentDescription="Image"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/image_grid"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:contentDescription="Image"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/badge_notification_stock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textColor="#FFF"
                    android:textSize="@dimen/stock_size_xs"
                    android:textStyle="bold" />
            </RelativeLayout>





        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_linearlayoutProductDetails"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_linear"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/bg_img_txt"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_prodcut_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>