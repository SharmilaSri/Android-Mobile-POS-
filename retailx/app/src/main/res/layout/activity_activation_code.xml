<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivationCodeActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryMainWhite"
        android:weightSum="17">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="left|bottom"
            android:padding="@dimen/padding"
            >

            <TextView
                android:padding="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="REGISTRATION AUTHENTICATION"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="left|top"
            android:padding="@dimen/padding"

            >

            <TextView
                android:padding="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/commonColorLight"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:text="TYPE THE CODE"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:weightSum="4"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/bg_grid"

            >

            <EditText
                android:id="@+id/code_one"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"
                android:layout_width="wrap_content"
                android:maxLength="4"
                android:hint="*  *  *  *"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/colorTxtHintOptional_madatory"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDarkOrange"
                android:textSize="50sp"
                />

            <!--<EditText
                android:id="@+id/code_one"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:maxLength="1"
                android:hint="*"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/colorTxtHintOptional_madatory"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDarkOrange"
                android:textSize="50sp"
                />

            <EditText
                android:id="@+id/code_two"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:maxLength="1"
                android:hint="*"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/colorTxtHintOptional_madatory"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDarkOrange"
                android:textSize="50sp"
                />

            <EditText
                android:id="@+id/code_three"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:maxLength="1"
                android:hint="*"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/colorTxtHintOptional_madatory"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDarkOrange"
                android:textSize="50sp"
                />

            <EditText
                android:id="@+id/code_four"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:maxLength="1"
                android:hint="*"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/colorTxtHintOptional_madatory"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDarkOrange"
                android:textSize="50sp"
                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/padding"
            android:layout_weight="1.5">
            <TextView
                android:paddingLeft="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryAccentAquaGreen"
                android:text="RE-SEND CODE"
                android:onClick="resendCode"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            android:orientation="vertical"
            android:padding="@dimen/padding"
            android:gravity="bottom|center_horizontal">


            <Button
                android:id="@+id/id_btn_signup"
                android:layout_width="match_parent"
                android:text="SUBMIT"
                android:layout_gravity="right|center_vertical"
                android:textSize="@dimen/large"
                android:onClick="activateOtp"
                android:textColor="@drawable/txt_btn_login_selector"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_selector"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>