<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/txtDescriptionUnitMeasure_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/padding"
            android:background="@drawable/bg_grid"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"
            android:textColor="@color/colorActionBarText"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="@string/enter_quantity"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:hint="@string/add_amount_quantity"
                >

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColorHint="@color/popuptextcolor"
             />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txtDescriptionUnitMeasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lines="1"
                android:inputType="numberDecimal"
                android:text="@string/product_by_kilo"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/colorActionBarText"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/measurement_examples"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorHint="@color/colorTxtCommon"
                />
           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:inputType="numberDecimal"
                android:text="@string/measurement_examples"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorHint="@color/colorTxtCommon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:inputType="numberDecimal"
                android:text="@string/measurement_examples"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorHint="@color/colorTxtCommon"
                />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/quantity_desc"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorHint="@color/colorTxtHintOptional_madatory"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/colorPrimaryMainWhite"
        android:background="@drawable/bg_btn_selector"
        android:text="@string/confirm" />

    <Button
        android:id="@+id/id_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/colorPrimaryMainWhite"
        android:background="@drawable/bg_btn_dull_selector"
        android:text="@string/cancel" />

</LinearLayout>