<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:weightSum="11"
    android:padding="@dimen/padding"
    android:orientation="horizontal">



    <LinearLayout
        android:id="@+id/id_linearlayoutProductDetails"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saved_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anchor"
            style="@style/CommonTxt"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:padding="@dimen/padding"
        >

        <TextView
            android:id="@+id/id_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CommonTxt"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorTxtHintOptional"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:padding="@dimen/padding"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_delete_product"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>