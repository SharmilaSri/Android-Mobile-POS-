<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:weightSum="11"
    android:padding="@dimen/padding"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/product_title_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/id_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 "
            style="@style/CommonTxt"
            android:layout_gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Medium"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearlayoutProductDetails"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anchor"
            style="@style/CommonTxt"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <TextView
            android:id="@+id/id_unit_price"
            android:layout_marginRight="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200.00"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/quantity_size_xs"
            android:textColor="@color/commonColorLight"
             />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
       >

        <TextView
            android:id="@+id/id_prodcut_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            style="@style/CommonTxt"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Medium"
         />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_delete_product"
            android:src="@drawable/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>